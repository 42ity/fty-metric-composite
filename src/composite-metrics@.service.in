[Unit]
Description=composite_metrics service for %I
After=malamute.service
Conflicts=composite-metrics@%i.path

[Service]
Type=simple
Environment="prefix=@prefix@"
EnvironmentFile=-@sysconfdir@/default/bios
EnvironmentFile=-@sysconfdir@/sysconfig/bios
EnvironmentFile=-@sysconfdir@/default/bios__composite-metrics__%i.conf
EnvironmentFile=-@sysconfdir@/sysconfig/bios__composite-metrics__%i.conf
ExecStart=@prefix@/bin/composite-metrics @sysconfdir@/@PACKAGE@/%i.cfg

[Install]
WantedBy=multi-user.target
