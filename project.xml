<project
    name = "composite-metrics"
    description = "Agent that computes new metrics from bunch of other metrics"
    script = "zproject.gsl"
    email = "bios@eaton.com"
    >
    <include filename = "license.xml" />
    <version major = "0" minor = "1" patch = "0" />
    <use project = "czmq" />
    <use project = "malamute" />
    <use project = "lua" test="luaL_openlibs" debian_name="liblua5.1-0-dev"/>
    <use project = "cxxtools" test="cxxtools::Utf8Codec::Utf8Codec"/>
    <use project = "biosproto" test="bios_proto_destroy" spec_name="libbiosproto-devel"/>

    <service name="dc_th">Service that trigers dc_th_enable script</service>

    <bin name = "dc_th_enable">Enables computation of Temperature &amp; Humidity in DC</bin>
    <main  name = "composite_metrics" services = "1">Metrics calculator</main>
</project>
